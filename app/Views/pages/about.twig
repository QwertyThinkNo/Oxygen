{% block js %}

<script type="text/javascript">
    //License
    var license = document.querySelector('#license-dialog');
    var showLicenseButton = document.querySelector('#show-license');
    
    showLicenseButton.addEventListener('click', function () {
        license.showModal();
    });
    license.querySelector('.close').addEventListener('click', function () {
        license.close();
    });

    //Changelog
    var changelog = document.querySelector('#changelog-dialog');
    var showChangelogButton = document.querySelector('#show-changelog');
    
    showChangelogButton.addEventListener('click', function () {
        changelog.showModal();
    });
    changelog.querySelector('.close').addEventListener('click', function () {
        changelog.close();
    });
</script>

{% endblock js %}